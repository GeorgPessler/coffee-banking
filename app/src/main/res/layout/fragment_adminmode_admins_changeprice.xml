<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    tools:context="de.fruity.coffeeapp.adminmode.AdminmodeGroupsFragment">

    <TextView
        android:id="@+id/tv_kind"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dip"
        android:text="ValueType"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/tv_kind"
        android:text="Min"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="28dp"
        android:layout_toEndOf="@+id/np_min"
        android:clickable="false"
        android:text="Max"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="22sp" />

    <NumberPicker
        android:id="@+id/np_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/tv_max"
        android:autoText="false"
        android:editable="true"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/tv_stepsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_max"
        android:layout_centerVertical="true"
        android:layout_marginStart="43dp"
        android:layout_toEndOf="@+id/np_max"
        android:text="Stepsize"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="22sp" />

    <NumberPicker
        android:id="@+id/np_stepsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/tv_stepsize"
        android:autoText="false"
        android:editable="true"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/tv_default_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_stepsize"
        android:layout_centerVertical="true"
        android:layout_marginStart="43dp"
        android:layout_toEndOf="@+id/np_stepsize"
        android:text="Default"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="22sp" />

    <NumberPicker
        android:id="@+id/np_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/tv_default_value"
        android:autoText="false"
        android:contentDescription="Max"
        android:editable="true"
        android:ems="10"
        android:inputType="number" />

    <NumberPicker
        android:id="@+id/np_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/tv_min"
        android:autoText="false"
        android:contentDescription="Max"
        android:editable="true"
        android:ems="10"
        android:inputType="number" />



</RelativeLayout>
